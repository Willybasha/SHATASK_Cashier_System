@model BusinessLayer.DTOS.CashierModels.CashierViewModel

@{
    ViewData["Title"] = "Cashier Details";
}

<h1>Cashier Details</h1>

<div>
    <h2>@Model.CashierName</h2>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CashierName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CashierName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchId)
        </dt>
        <dd class="col-sm-10">
            @Model.BranchName  <!-- Assuming BranchName is included in the DTO -->
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

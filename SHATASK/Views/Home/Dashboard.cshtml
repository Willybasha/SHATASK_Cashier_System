@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="invoice-tab" data-bs-toggle="tab" data-bs-target="#invoice" type="button" role="tab" aria-controls="invoice" aria-selected="true">Invoices</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="cashier-tab" data-bs-toggle="tab" data-bs-target="#cashier" type="button" role="tab" aria-controls="cashier" aria-selected="false">Cashiers</button>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="invoice" role="tabpanel" aria-labelledby="invoice-tab">
        <iframe src="@Url.Action("Index", "Invoice")" frameborder="0" width="100%" height="600px"></iframe>
    </div>
    <div class="tab-pane fade" id="cashier" role="tabpanel" aria-labelledby="cashier-tab">
        <iframe src="@Url.Action("Index", "Cashier")" frameborder="0" width="100%" height="600px"></iframe>
    </div>
</div>

